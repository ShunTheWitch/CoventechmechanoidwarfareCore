	<li>
	<capacity>Manipulation</capacity>
	<offset>0.25</offset>
	</li>
	<li>
	<capacity>Moving</capacity>
	<offset>0.2</offset>
        </li>
	</capMods>
        </li>
    </stages>
    </HediffDef>
