<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]</xpath>
			<value>
				<comps/>
			</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/comps</xpath>
		<value>
			<li Class="ApparelSwitch.CompProperties_SwitchApparel">
				<apparelToSwitch>
					<li>
						<label>Switch to Recon Armor</label>
						<description>Transform this apparel into recon armor</description>
						<texPath>Things/Pawn/Humanlike/Apparel/ReconArmor/ReconArmor</texPath>
						<apparel>Apparel_ArmorRecon</apparel>
						<ticksToSwitchApparel>300</ticksToSwitchApparel>
					</li>
				</apparelToSwitch>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Apparel_ArmorRecon"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Apparel_ArmorRecon"]</xpath>
			<value>
				<comps/>
			</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_ArmorRecon"]/comps</xpath>
		<value>
			<li Class="ApparelSwitch.CompProperties_SwitchApparel">
				<apparelToSwitch>
					<li>
						<label>Switch to Power Armor</label>
						<description>Transform this apparel into power armor</description>
						<texPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor</texPath>
						<apparel>Apparel_PowerArmor</apparel>
						<ticksToSwitchApparel>600</ticksToSwitchApparel>
					</li>
				</apparelToSwitch>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]</xpath>
			<value>
				<comps/>
			</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/comps</xpath>
		<value>
			<li Class="ApparelSwitch.CompProperties_HideIfLayersWorn">
				<hideIfLayersWorn>
					<li>Middle</li>
				</hideIfLayersWorn>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Apparel_ArmorRecon"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Apparel_ArmorRecon"]</xpath>
			<value>
				<comps/>
			</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_ArmorRecon"]/comps</xpath>
		<value>
			<li Class="ApparelSwitch.CompProperties_HideIfLayersWorn">
				<hideIfLayersWorn>
					<li>Middle</li>
				</hideIfLayersWorn>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationConditional">
		<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/comps</xpath>
		<nomatch Class="PatchOperationAdd">
			<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]</xpath>
			<value>
				<comps/>
			</value>
		</nomatch>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="Apparel_PowerArmor"]/comps</xpath>
		<value>
			<li Class="ApparelSwitch.CompProperties_ChangeGraphicIfLayersWorn">
				<changeGraphicIfLayersWorn>
					<li>Middle</li>
				</changeGraphicIfLayersWorn>
				<alternateGraphicPath>Things/Pawn/Humanlike/Apparel/PowerArmor/PowerArmor_Alt</alternateGraphicPath>
			</li>
		</value>
	</Operation>
</Patch>
